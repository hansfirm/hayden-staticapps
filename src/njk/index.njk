{% extends '_layouts/base.njk' %}

{% block page_title %}The Ship's Log{% endblock %}

{% block page_description %}A daily blog by Capt. Hayden Hook.{% endblock %}

{% block content %}
<div class="container">
  <div class="row">
    <div class="col-sm-10 offset-sm-1 col-md-6 offset-md-3 col-lg-8 offset-lg-2" class="text center">
      <h1>A Daily Guide to Not Walking the Plank</h1>
      <p>Subscribe to this daily account of a pirate ship's travel for insight on the sea. It covers everything from buried treasure to eyepatches.</p>
      <p>Posted daily!</p>
     {% for entry in data.entries %}
      <h3 class="entry-headline"><a href="{{ entry.url }}">{{ entry.title }}</a></h3>
      <p class="entry-date">{{ entry.date }}</p>
      <hr>
    {% endfor %}
    </div>
  </div>
</div>
{% endblock %}
